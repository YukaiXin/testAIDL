<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kxyu.testaidl.CilentActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="链接"
        android:id="@+id/linebtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示"
        android:id="@+id/displaybtn"
        android:layout_alignBottom="@+id/linebtn"
        android:layout_toEndOf="@+id/linebtn"
        android:layout_marginStart="56dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="New Text"
        android:id="@+id/textView"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/linebtn"
        android:layout_alignStart="@+id/linebtn"
        android:layout_alignEnd="@+id/displaybtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="断开"
        android:id="@+id/Overbtn"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/linebtn"
        android:layout_marginTop="42dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="双显"
        android:id="@+id/doubleDisplay"
        android:layout_below="@+id/displaybtn"
        android:layout_alignStart="@+id/displaybtn"
        android:layout_marginTop="17dp" />
</RelativeLayout>
